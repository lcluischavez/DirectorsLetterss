<%- include('partials/header') -%>

<main class="add-letter-container">
  <section class="add-letter-section">
<!-- Add-Letter view -->
<h1>Add New Letter</h1>
<form action="/add-letter" method="POST" enctype="multipart/form-data">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required>
  <label for="writer">Writer:</label>
  <select id="writer" name="writer" required>
    <% letterwriters.forEach((writer) => { %>
      <option value="<%= writer.writer_id %>"><%= writer.name %></option>
    <% }); %>
  </select>
  <label for="recipient">Recipient:</label>
  <select id="recipient" name="recipient" required>
    <% letterrecipients.forEach((recipient) => { %>
      <option value="<%= recipient.recipient_id %>"><%= recipient.name %></option>
Continuation of the updated `add-letter.ejs` view:

```ejs
    <% }); %>
  </select>
  <label for="category">Category:</label>
  <select id="category" name="category" required>
    <% lettercategories.forEach((category) => { %>
      <option value="<%= category.category_id %>"><%= category.name %></option>
    <% }); %>
  </select>
  <label for="file">Select .docx File:</label>
  <input type="file" id="file" name="file" accept=".docx" required>
  <button type="submit">Add Letter</button>
</form>

  </section>
</main>

<%- include('partials/footer') -%>
